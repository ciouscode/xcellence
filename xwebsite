  <script>
    // ABOUT SECTION TOGGLE
    const aboutToggle = document.getElementById('about-toggle');
    const aboutSection = document.getElementById('about-hidden');
    aboutToggle.addEventListener('click', () => {
      aboutSection.classList.toggle('active');
      aboutSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
    });

    // DASHBOARD MODAL
    const dashboardLink = document.getElementById('dashboard-link');
    const modal = document.getElementById('disclaimer-modal');
    const continueBtn = document.getElementById('continue-btn');
    const dashboardOverlay = document.getElementById('dashboard-overlay');

    dashboardLink.addEventListener('click', () => modal.classList.add('active'));

    continueBtn.addEventListener('click', () => {
      modal.classList.remove('active');

      // Hide homepage elements except navbar
      const homepageElements = document.querySelectorAll('.hero, .about-wrapper, .contact');
      homepageElements.forEach(el => el.style.display = 'none');

      // Show dashboard overlay
      dashboardOverlay.style.display = 'flex';
    });

    // Click outside modal to close
    modal.addEventListener('click', e => {
      if (e.target === modal) modal.classList.remove('active');
    });
  </script>
