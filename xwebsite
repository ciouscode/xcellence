<script>
const about=document.getElementById('about-hidden'),
      modal=document.getElementById('disclaimer-modal'),
      dashboard=document.getElementById('dashboard-overlay'),
      navbar=document.getElementById('navbar'),
      hero=document.getElementById('hero'),
      mainSections=document.querySelectorAll('.hero,.about-wrapper,.contact');

function toggleAbout(){
  about.classList.toggle('active');
  about.scrollIntoView({behavior:'smooth'});
}

function showDisclaimer(){
  modal.classList.add('active');
}

function closeModal(){
  modal.classList.remove('active');
}

function continueDashboard(){
  modal.classList.remove('active');
  mainSections.forEach(e=>e.style.display='none');
  dashboard.style.display='flex';
  navbar.classList.add('dashboard-active');
}

function resetHome(){
  dashboard.style.display='none';
  mainSections.forEach(e=>e.style.display='');
  about.classList.remove('active');
  navbar.classList.remove('dashboard-active');
  hero.scrollIntoView({behavior:'smooth'});
}
</script>
